PKG_CFLAGS = $(SHLIB_OPENMP_CFLAGS)
PKG_FFLAGS = $(SHLIB_OPENMP_FFLAGS) 
PKG_FCFLAGS = $(SHLIB_OPENMP_FCFLAGS) 
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(SHLIB_OPENMP_FCFLAGS)

C_OBJS = utils_and_wrappers.o
FT_OBJS = utils.o lgamma.o

.NOTPARALLEL: all
all: clean $(SHLIB) cleanup

utils.mod: utils.o
lgamma.o: utils.mod
lgam.mod: lgamma.o
delaporte.o: utils.mod lgam.mod

$(SHLIB): $(FT_OBJS) delaporte.o $(C_OBJS)

clean:
	@rm -rf *.o *.mod *.d *.rc *.so *.dylib *.dll *.a *.lib $(SHLIB) $(OBJECTS)

cleanup:
	@rm -rf *.mod *.o
