PKG_FFLAGS = $(SHLIB_OPENMP_FFLAGS) -std=f2008
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(SHLIB_OPENMP_CFLAGS)

C_OBJS = utils_and_wrappers.o
FT_OBJS = utils.o delaporte.o

all:
	@$(MAKE) $(SHLIB)
	@rm -f *.mod *.o

$(SHLIB): $(FT_OBJS) $(C_OBJS) 

delaporte.o: utils.o

cleanup:
	@rm -f *.mod *.o
	
clean:
	@rm -f *.mod *.o
