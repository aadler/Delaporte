PKG_FFLAGS = $(SHLIB_OPENMP_FFLAGS) $(LTO_OPT)
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(SHLIB_OPENMP_CFLAGS) $(LTO_OPT)

C_OBJS = utils_and_wrappers.o
FT_OBJS = utils.o lgamma.o delaporte.o

all:
	@$(MAKE) $(SHLIB)
	@rm -f *.mod *.o

$(SHLIB): $(FT_OBJS) $(C_OBJS) 

lgamma.o: utils.o 
delaporte.o: lgamma.o utils.o

cleanup:
	@rm -f *.mod *.o
